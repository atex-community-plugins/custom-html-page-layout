<output-template name="com.atex.plugins.pagelayout.CustomHTMLPageLayoutRenderController.ot" input-template="p.siteengine.PageLayoutOutputTemplate">
  <content-xml>
    <!-- add plugin reference -->
    <contentref group="plugin" name="plugindef">
      <contentid>
        <major>Content</major>
        <externalid>plugins.com.atex.plugins.custom-html-page-layout</externalid>
      </contentid>
    </contentref>

    <component group="output/modelKeyMode" name="selected">no-cache</component>
    <contentref group="output/renderer" name="selected">
      <contentid>
        <externalid>p.siteengine.VelocityRenderer</externalid>
      </contentid>
    </contentref>
    <component group="output/renderer" name="templateFileName">com.atex.plugins.pagelayout.CustomHTMLPageLayoutRenderController.vm</component>
    <contentref group="output/controller" name="selected">
      <contentid>
        <externalid>p.siteengine.JavaClassRenderController</externalid>
      </contentid>
    </contentref>
    <component group="output/controller/selected/renderControllerClass" name="value">com.atex.plugins.pagelayout.CustomHTMLPageLayoutRenderController</component>
  </content-xml>
</output-template>